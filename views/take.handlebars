<script>
    function popOpen() {
        let modalPop = document.getElementById("modal-wrap");
        let modalBg = document.getElementById("modal-bg")

        modalBg.style.display = "block"
        modalPop.style.display = "block"
    }
    
    function popClose() {
        let modalPop = document.getElementById("modal-wrap");
        let modalBg = document.getElementById("modal-bg")

        modalBg.style.display = "none"
        modalPop.style.display = "none"
    }
</script>


